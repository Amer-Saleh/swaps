<div class="container" id="postsDiv">
	<div class="section">
		<div class="row">
			{{#each posts}}
	          	<div class="col s12 m4" id="{{this.id}}" data="{{this.user_id}}">
	            	<div class="card">
	              		<div class="card-image">
	              			<img id="image" src="{{this.img_location}}">
	              		</div>
	              		<div class="card-content">
	                		<span id="description" class="card-title">{{this.description}}</span>
	                		<p id="owner"> Owner: {{this.user_name}} </p>
							<p id="condition"> Condition: {{this.prod_condition}} </p>
							<p id="availability"> Availability: {{this.availability}} </p>
							<p id="comments"> Comments: {{this.comments}} </p>
	              		</div>
	              		<div class="card-action">
	              		{{!-- These 3 buttons allow the user to respond to swap requests --}}
			              	{{!-- contact button opens contact form and sends requester an email--}}
			                <a href="/contact">Contact</a>
			                {{!-- click exchange offers (can be shortened ot offers or a better name)-
			                this allows the user to see what the requester has to offer (all of the requester's posts) --}}
			                <a href="/offers">Exchange Offers</a>
			                {{!-- this one deletes the offer from the database - originally, it was going to go to 
			                swap history, but I don't think we have time to make a swap history page.
			                It should also display the reject modal located at the bottom of this page --}}
			                <a class="modal-trigger" href="#reject">No Thanks</a>
	              		</div>
	            	</div>
	          	</div>
	        {{/each}}
	    </div>
	</div>
</div>
<div id="map"></div>

<footer class="page-footer orange">
    <div class="container">
        <div class="row">
            <a class="grey-text text-lighten-4"> &#169; 2017 The SWAPS Team</a>
        </div>
        <div class="row">
        </div>
    </div>
</footer>

<!-- Reject Modal -->
<div id="reject" class="modal">
    <div class="modal-content">
        <button class="modal-close btn-flat" style="position:absolute;top:0;right:0;">X</button>
       	<h4>Swap Rejected!</h4>
        <p>This swap has been removed from your offers.</p>
   	</div>
    <div class="modal-footer">
        <a href="/search" class=" modal-action modal-close waves-effect waves-green btn-flat">Search Posts</a>
    </div>
</div>
