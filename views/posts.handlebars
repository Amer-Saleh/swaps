
{{!-- THE BELOW SECTION IS FOR CREATING A POST TO BE SENT TO THE DATABASE --}}

<div class="col-sm-4">
				<div id="createPost">
							<div class="">
								<div class="row" id="">
									<div class="col-sm-12" id="">
										<div class="row">
											<div class="col-sm-12">
												<input id="userID"></input>
												<input id="category"></input>
												<input id="ownerInput"> </input>
											    <input id="descriptionInput"></input>
											    <input id="conditionInput"> </input>
											    <input id="availabilityInput">  </input>
											    <input id="swap_locationInput"> </input>
											    <input id="commentsInput"> </input>
											    <button type="submit" id="postForm" class="btn">Submit</button>
											</div>
										</div>
									</div>
								</div>
							</div>
				</div>
			</div>








{{!-- THE BELOW SECTION IS FOR RETRIEVING POSTS FROM THE DATABASE --}}
			<div class="col-sm-4">
				<div id="postsDiv">
					{{each}}
						{{#if this.posts}}
							<div class="">
								<div class="row" id="">
									<div class="col-sm-12" id="">
										<div class="row">
											<div class="col-sm-12">
												<p id="owner"> Owner: {{this.first_name}} </p>
											    <p id="description"> Description {{this.description}} </p>
											    <img id="image" src="{{this.img_location}}"> 
											    <p id="condition"> Condition: {{this.condition}} </p>
											    <p id="availability"> Availability: {{this.availability}} </p>
											    <p id="swap_location"> Swap Location: {{this.swap_location}} </p>
											    <p id="comments"> Comments: {{this.comments}} </p>
											</div>
										</div>
										<div class="row" class="classRow">
											<div class="col-sm-4">
												<form action="/contact" method="GET">
													<input type="hidden" name="" value="{{this.product_id}}">
													<button type="submit" class="btn">Contact</button>
												</form>
											</div>
											<div class="col-sm-4">
												<form>
													<input type="hidden" name="" value="{{this.product_id}}">
													<button type="submit" class="btn">SWAP!</button>
												</form>
											</div>
											<div class="col-sm-4">
												<form>
													<input type="hidden" name="" value="{{this.product_id}}">
													<button type="submit" class="btn">Location</button>
												</form>
											</div>
										</div>
									</div>
								</div>
							</div>
						{{/if}}
					{{/each}}
				</div>
			</div>